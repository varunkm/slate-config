# Configs
config windowHintsIgnoreHiddenWindows false
config windowHintsShowIcons true
config windowHintsSpread true
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

# Binding Aliases
alias super shift;ctrl;alt;cmd
#alias super f19
# Position Aliases
alias quad-1 corner top-left resize:screenSizeX/2;screenSizeY/2
alias quad-2 corner top-right resize:screenSizeX/2;screenSizeY/2
alias quad-3 corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias quad-4 corner bottom-right resize:screenSizeX/2;screenSizeY/2
alias half-l corner top-left resize:screenSizeX/2;screenSizeY
alias half-r corner top-right resize:screenSizeX/2;screenSizeY
alias half-t corner top-left resize:screenSizeX;screenSizeY/2
alias half-b corner bottom-left resize:screenSizeX;screenSizeY/2
alias twothrd-l corner top-left resize:2*screenSizeX/3;screenSizeY
alias thrd-c move screenSizeX/3;screenOriginY screenSizeX/3;screenSizeY
alias thrd-r corner top-right resize:screenSizeX/3;screenSizeY
alias thrd-t corner top-left resize:screenSizeX;screenSizeY/3
alias thrd-m move screenOriginX;screenSizeY/3 screenSizeX;screenSizeY/3
alias thrd-b corner bottom-left resize:screenSizeX;screenSizeY/3
alias full corner top-left resize:screenSizeX;screenSizeY
alias lapt move screenOriginX;screenOriginY screenSizeX;screenSizeY 0
alias moni move screenOriginX;screenOriginY screenSizeX;screenSizeY 1
#alias tv move screenOriginX;screenOriginY screenSizeX;screenSizeY 0

